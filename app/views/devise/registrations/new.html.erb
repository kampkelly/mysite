<div class="row">
  <div class="col-sm-6 mx-auto">
    <h2 class="text-center">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field form-group form-row">
        <%= f.label :email, class: 'col-sm-3' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control col-sm-7', placeholder: 'Insert email address' %>
      </div>

       <div class="field form-group form-row">
        <%= f.label :name, class: 'col-sm-3' %>
        <%= f.text_field :name, autocomplete: "off", class: 'form-control col-sm-7', placeholder: 'Enter Name' %>
      </div>

       <div class="field form-group form-row">
        <%= f.label :city, class: 'col-sm-3' %>
        <%= f.text_field :city, autocomplete: "off", class: 'form-control col-sm-7', placeholder: 'Enter City' %>
      </div>

       <div class="field form-group form-row">
        <%= f.label :facebook_url, class: 'col-sm-3' %>
        <%= f.text_field :facebook_url, autocomplete: "off", class: 'form-control col-sm-7', placeholder: 'Enter Facebook Url' %>
      </div>

      <div class="field form-group form-row">
        <%= f.label :password, class: 'col-sm-3' %>
       
        <%= f.password_field :password, autocomplete: "off", class: 'form-control col-sm-7', placeholder: 'Type Password' %>
         <% if @minimum_password_length %>
        <small>(<%= @minimum_password_length %> characters minimum)</small>
        <% end %>
      </div>

      <div class="field form-group form-row">
        <%= f.label :password_confirmation, class: 'col-sm-3' %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control col-sm-7', placeholder: 'Confirm Password' %>
      </div>

      <div class="field form-group form-row">
          <div class="col-sm-3"></div>
        <%= f.submit "Sign up", class: 'form-control col-sm-7 btn btn-secondary', placeholder: 'Confirm Password' %>
      </div>
    <% end %>

      <div class="field form-group form-row">
          <div class="col-sm-3"></div>
          <div class="col-sm-7"><%= render "devise/shared/links" %></div>
      </div>
    </div>
</div>
