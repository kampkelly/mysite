<div class="container">
    <div class="row">
        <div class="col-sm-7">


        <h2>Update My Profile <!--<%= resource_name.to_s.humanize %> --></h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>

          <div class="field form-group form-row">
            <%= f.label :email, class: 'col-sm-3' %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control col-sm-7', placeholder: 'Email Address' %>
          </div>

              <div class="field form-group form-row">
                <%= f.label :name, class: 'col-sm-3' %>
                <%= f.text_field :name, autocomplete: "off", class: 'form-control col-sm-7', placeholder: 'Enter Name' %>
              </div>

               <div class="field form-group form-row">
                <%= f.label :city, class: 'col-sm-3' %>
                <%= f.text_field :city, autocomplete: "off", class: 'form-control col-sm-7', placeholder: 'Enter City' %>
              </div>

               <div class="field form-group form-row">
                <%= f.label :facebook_url, class: 'col-sm-3' %>
                <%= f.email_field :facebook_url, autocomplete: "off", class: 'form-control col-sm-7', placeholder: 'Enter Facebook Url' %>
              </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field form-group form-row">
            <div class="col-sm-3">
            <%= f.label :password %> <small>(leave blank if you don't want to change it)</small>
          </div>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control col-sm-7', placeholder: 'Password' %>
            <% if @minimum_password_length %>
              <small><%= @minimum_password_length %> characters minimum</small>
            <% end %>
          </div>

          <div class="field form-group form-row">
            <%= f.label :password_confirmation, class: 'col-sm-3' %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control col-sm-7', placeholder: 'Confirm password' %>
          </div>

          <div class="field form-group form-row">
             <div class="col-sm-3">
              <%= f.label :current_password %> <small>(we need your current password to confirm your changes)</small>
            </div>
            <%= f.password_field :current_password, autocomplete: "off", class: 'form-control col-sm-7', placeholder: 'Current password', required: 'true' %>
          </div>

          <div class="field  form-group form-row">
            <div class="col-sm-3"></div>
            <%= f.submit "Update", class: 'btn btn-info' %>
          </div>
        <% end %>

        <h3>Cancel my account</h3>

        <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

        <%= link_to "Back", :back %>
        </div>
        <div class="col-sm-5">
            <h4>My Posts</h4>
        </div>
    </div>
</div>
