<div class="row">
  <div class="col-sm-6 mx-auto">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-group form-row">
        <%= f.label :email, class: 'col-sm-3' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control col-sm-7', placeholder: 'Type Email' %>
      </div>

      <div class="field form-group form-row">
        <%= f.label :password, class: 'col-sm-3' %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control col-sm-7', placeholder: 'Enter Password' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field form-group form-row">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="field form-group form-row">
        <div class="col-sm-3"></div>
        <%= f.submit "Log in", class: 'col-sm-7 btn btn-primary' %>
      </div>
    <% end %>

     <div class="field form-group form-row">
          <div class="col-sm-3"></div>
          <div class="col-sm-7"> <%= render "devise/shared/links" %></div>
      </div>
   
    </div>
</div>
