<div class="container">
	<%= link_to 'All Categories', categories_path, :class=> 'text-primary' %>
	<h1 class="text-center">Make a New Category</h1>
	
	<div class="row">
		<div class="col-sm-7 mx-auto">
		 <%= form_for @category, html: { multipart: true, class: 'form-horizontal' } do |f| %>
		      <div class="field form-group form-row">
		        <%= f.label :name, class: 'col-sm-3' %><br />
		        <%= f.text_field :name, class: 'form-control col-sm-7', placeholder: 'Category Name' %>
		      </div>

		    <div class="field form-group form-row">
		        <div class="col-sm-3"></div>
		        <%= f.submit "Create", class: 'col-sm-7 btn btn-warning' %>
		      </div>
		    <% end %>
		</div>
	</div>
</div>